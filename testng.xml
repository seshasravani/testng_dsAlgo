<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DSAlgoTestSuite" parallel="classes" thread-count="3">

    <!-- Combined Listeners Block -->
    <listeners>
       <!-- <listener class-name="Listeners.MyListeners" />
        <listener class-name="Listeners.MyAnnotationTransformer" />-->
       <!--- <listener class-name="io.qameta.allure.testng.AllureTestNGListener"/>-->
        <listener class-name="Listeners.AllureListener"/>
        <listener class-name="com.aventstack.extentreports.testng.listener.ExtentITestListenerClassAdapter" />
         <listener class-name="Listeners.ExtentTestListener" />
        <!--<listener class-name="com.aventstack.chaintest.testng.ChainTestListener"/>-->
         
    </listeners>
    
    <!-- Chrome Test -->
    <test name="chromeTest">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="testcases.ArrayTest"/>
            <class name="testcases.DataStructureTest"/>
            <class name="testcases.GraphTest"/>
            <class name="testcases.HomeTest"/>
            <class name="testcases.LinkedListTest"/>
            <class name="testcases.LoginTest"/>
            <class name="testcases.QueueTest"/>
            <class name="testcases.RegisterTest"/>
            <class name="testcases.stackTest"/>
            <class name="testcases.TreeTest"/>
        </classes>
    </test>

    <!-- Firefox Test -->
    <test name="firefoxTest">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="testcases.ArrayTest"/>
            <class name="testcases.DataStructureTest"/>
            <class name="testcases.GraphTest"/>
            <class name="testcases.HomeTest"/>
            <class name="testcases.LinkedListTest"/>
            <class name="testcases.LoginTest"/>
            <class name="testcases.QueueTest"/>
            <class name="testcases.RegisterTest"/>
            <class name="testcases.stackTest"/>
            <class name="testcases.TreeTest"/>
        </classes>
    </test>

    <!-- Edge Test -->
    <test name="edgeTest">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="testcases.ArrayTest"/>
            <class name="testcases.DataStructureTest"/>
            <class name="testcases.GraphTest"/>
            <class name="testcases.HomeTest"/>
            <class name="testcases.LinkedListTest"/>
            <class name="testcases.LoginTest"/>
            <class name="testcases.QueueTest"/>
            <class name="testcases.RegisterTest"/>
            <class name="testcases.stackTest"/>
            <class name="testcases.TreeTest"/>
        </classes>
    </test>

</suite>
